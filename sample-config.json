{
  "fields":[
    {
      "name":"centerStatus",
      "where":[
        {"step.name":"getCenterState"}
      ],
      "select":"body",
      "map":"identity",
      "agg":"last",
      "default":"open"
    },
    {
      "name":"language",
      "select":"flow.language",
      "map":"identity",
      "agg":"last",
      "default":"English"
    },
    {
      "name":"timeInMenu",
      "where":[
        {"step.name":"menuMain"}
      ],
      "select":"step.duration",
      "map":"identity",
      "agg":"sum",
      "default":0
    },
    {
      "name":"timeInSayPlay",
      "where":[
        {"step.name":["sayWelcome","say_play_1"]}
      ],
      "select":"step.duration",
      "map":"identity",
      "agg":"sum",
      "default":0
    },
    {
      "name":"maxTimeInStep",
      "select":"step.duration",
      "map":"identity",
      "agg":"max",
      "default":0
    },
    {
      "name":"functionCallTime",
      "where":[
        {"status_code":{"not":"null"}}
      ],
      "select":"step.duration",
      "map":"identity",
      "agg":"count",
      "default":0
    },
    {
      "name":"abandonCnt",
      "where":[
        {"QueueResult":"hangup"}
      ],
      "select":"step.idx",
      "map":"identity",
      "agg":"count",
      "default":0
    }
  ]
}